  linecenter(17px)
  color color255
  background: -webkit-linear-gradient(left top, color7 , color8); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(bottom right, color7, color8); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(bottom right, color7, color8); /* Firefox 3.6 - 15 */
  background: linear-gradient(to bottom right, color7 , color8); /* 标准的语法（必须放在最后） */
  &:after
    content '专属'


