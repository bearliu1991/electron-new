#service_group
  .ivu-poptip
    .ivu-poptip-popper
      will-change auto !important
      left -60px !important
      .ivu-poptip-body
        padding-right 0px
#select_type
  .ivu-poptip
    .ivu-poptip-popper
      .ivu-poptip-body
        padding 0px
#board
  .left-wrapper
    .ivu-poptip
      .ivu-poptip-popper
        .ivu-poptip-arrow
          margin-left auto
          border-top-color transparent
        .ivu-poptip-arrow:after 
            content: " ";
            bottom: -5px;
            margin-left: 0;
            border-bottom-width: 5px;
            border-top-width: 5px;
            border-top-color: transparent;
#board_form
.ivu-form
    .ivu-form-item
      .ivu-form-item-content
        .ivu-input
          color inherit
  #color-picker
    .ivu-poptip-inner
      white-space normal
    .ivu-poptip-popper .ivu-poptip-arrow
      left auto
/* 右键收藏样式 */
#collect
    .ivu-poptip
      display block
      .ivu-poptip-rel
        display block
      .ivu-poptip-popper .ivu-poptip-content .ivu-poptip-arrow
        border-right-color: transparent
        &:after
          border-right-color: transparent
/* 全局滚动条整体样式 */
&::-webkit-scrollbar /* 滚动条整体样式 */
    width 5px /* 高宽分别对应横竖滚动条的尺寸 */
    height 5px
&::-webkit-scrollbar-thumb /* 滚动条里面小方块 */
  border-radius 10px
  -webkit-box-shadow inset 0 0 0px rgba(0, 0, 0, 0)
  background rgba(0, 0, 0, 0.5)
&::-webkit-scrollbar-track /* 滚动条里面轨道 */
  -webkit-box-shadow  0 0 0 rgba(0, 0, 0, 0)
  border-radius 10px
  background rgba(0, 0, 0, 0)

.scroll-wrapper:hover
  &::-webkit-scrollbar-thumb /* 滚动条里面小方块 */
    border-radius 10px
    -webkit-box-shadow inset 0 0 0px rgba(0, 0, 0, 0)
    background rgba(0, 0, 0, 0.5)
