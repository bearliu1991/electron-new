.pad10
  padding:10px

#contactRecord
  width:252px
  text-align:left
  color(#616161)
  bgColor(#f5f5f5)
  .company
    setBetween()
    span
      color(#b2b2b2)
    .icon
      color(#ff3b30)
  .search
    setBetween()
    .add
      square(25px)
      bgColor(#dbd9d8)
  .tips
    background-color: #dbd9d8
    font-size: 12px
    padding: 7px 15px
    font-weight: 700
    color: #333
  .list
    li
      setBetween()
      height:61px
      box-sizing:border-box
      padding:5px 10px
      padding-right:2px
      cursor()
      &:hover
        bgColor(#ebebeb)
      &.active
        bgColor(#ebebeb)
#contactRecord
  .list
    .portrait
      relative()
      width:30px
      fn(12px)
      vertical(30px)
      center()
      radius(50%)
      color(#5d8cdb)
      bgColor(#e1edff)
      margin-right:20px
      i
        absolute()
        top:-8px
        min-width: 16px
        padding:0 2px
        vertical(16px)
        radius(8px)
        bgColor(#ff3b30)
        color()
      .contactDetail
        absolute()
        top:18px
        left:48px
      .fade1-enter-active
        transition: opacity .6s;
      .fade1-leave-active
        transition: opacity .1s;
      .fade1-enter, .fade1-leave-to
        opacity: 0;
    .cont
      width:138px
      .name
        margin-bottom:10px
        color(#000)
      .msg
        ellipsis()
    .time
      width:54px
      text-align:right
      ellipsis()
